@model List<ResultProductDtos>

@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">İlan Başlığı</th>
                            <th scope="col">Şehir</th>
                            <th scope="col">İlçe</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Tür</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Görüntüle</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.productID</th>
                                <td>@item.title</td>
                                <td>@item.city</td>
                                <td>@item.district</td>
                                <td>@item.categoryName</td>
                                <td>@item.price</td>
                                <td>@item.type</td>
                            
                                <td> <a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger">SİL</a> </td>
                                <td> <a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-warning">GÜNCELLE</a> </td>
                                <td> <a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-primary">GÖRÜNTÜLE</a> </td>
                     
                            </tr>
                        }
                    
                        </tbody>
                    </table>
                </div>
                <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni İlan Oluştur</a>
            </div>
        </div>
                
    </div>
</div>